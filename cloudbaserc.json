{
  "version": "2.0",
  "envId": "{{env.ENV_ID}}",
  "framework": {
    "name": "bitwarden",
    "plugins": {
      "client": {
        "use": "@cloudbase/framework-plugin-container",
        "inputs": {
          "serviceName": "bitwarden",
          "servicePath": "/",
          "uploadType": "image",
          "containerPort": 80,
          "imageInfo": {
            "imageUrl": "bitwardenrs/server:1.18.0-alpine"
          },
          "envVariables": {
            "WEBSOCKET_ENABLED": "false",
            "SIGNUPS_ALLOWED": "true"
          },
          "volumeMounts": {
            "/data": "bitwarden-cfs"
          }
        }
      }
    },
    "requirement": {
      "addons": [
        {
          "type": "CFS",
          "name": "bitwarden-cfs"
        }
      ]
    }
  }
}
